@page "/Mangas"
@model AMR_Project.Pages.Mangas.AllMangaModel
@{
}
<section class="conteiner">
    <div class="allAnimeFilter">
        <div class="allAnime">
            @{
                var mangas = Model.Mangas.OrderByDescending(a => a.Rating).Select(a => a).ToList();
                for (Int32 i = 0; i < mangas.Count; i++)
                {
                    <a asp-page="/Mangas/Manga" asp-route-mangaId="@mangas[i].Id">
                        @if (mangas[i].MainImage != null)
                        {
                            <img class="imgAnime"
                                 src="data:image/jpeg;base64,@(Convert.ToBase64String(mangas[i].MainImage))"
                                 alt="@mangas[i].Name"
                                 title="@mangas[i].Name" />
                        }
                        else
                        {
                            <img class="imgAnime"
                                 alt="@mangas[i].Name"
                                 title="@mangas[i].Name" />
                        }
                    </a>
                }
            }
        </div>
        <div class="filter">
            <!-- <h2>Фильтр</h2> -->
            <form action="">
                <h3>Статус</h3>
                <input type="checkbox" name="" id="">Онгоинг<span data-title="Произведение ещё выходит на данный момент" class="hint">?</span><br>
                <input type="checkbox" name="" id="">Анонс<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">Вышел<span class="hint">?</span><br>
                <h3>Рейтинг</h3>
                <input type="checkbox" name="" id="">G<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">PG<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">PG-13<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">R-17<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">R+<span class="hint">?</span><br>
                <h3>Жанры</h3>
                <input type="checkbox" name="" id="">Сёнен<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">Сёдзе<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">Романтика<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">Детектив<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">Повседневность<span class="hint">?</span><br>
                <h3>Теги</h3>
                <input type="checkbox" name="" id="">ГГ девушка<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">ГГ парень<span class="hint">?</span><br>
                <input type="checkbox" name="" id="">Другой мир<span class="hint">?</span><br>
                <!-- Остальные фильтры добавь по желанию -->

            </form>
        </div>
    </div>
    </section>