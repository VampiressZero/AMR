<section class="conteiner">
    <div class="Popular">
        <div class="textPopular">
            <h2>Самая популярная манга</h2>
            <a class="textAllAnime" asp-page="/Mangas/AllManga">Вся манга</a>
        </div>
        <div class="slider">
            @{
                var mangasPopular = Model.Mangas.OrderByDescending(a => a.Rating).Take(7).Select(a => a).ToList();
                for (Int32 i = 0; i < mangasPopular.Count; i++)
                {
                    <a asp-page="/Mangas/Manga" asp-route-mangaId="@mangasPopular[i].Id">
                        @if (mangasPopular[i].MainImage != null)
                        {
                            <img class="PopularAnime imgAnime"
                                 src="data:image/jpeg;base64,@(Convert.ToBase64String(mangasPopular[i].MainImage))"
                                 alt="@mangasPopular[i].Name"
                                 title="@mangasPopular[i].Name" />
                        }
                        else
                        {
                            <img class="PopularAnime imgAnime"
                                 alt="@mangasPopular[i].Name"
                                 title="@mangasPopular[i].Name" />
                        }
                    </a>
                }
            }
        </div>
    </div>
