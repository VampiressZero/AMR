<div class="ongoings">
    <h2 class="textOngoing">Онгоинги</h2>
    <div class="imgongoings">
        @{
            var mangasOngoings = Model.Mangas.Where(a => a.Status == "Онгоинг").Take(8).Select(a => a).ToList();
            for (Int32 i = 0; i < mangasOngoings.Count; i++)
            {
                <a asp-page="/Mangas/Manga" asp-route-mangaId="@mangasOngoings[i].Id">
                    @if (mangasOngoings[i].MainImage != null)
                    {
                        <img class="imgAnime"
                             src="data:image/jpeg;base64,@(Convert.ToBase64String(mangasOngoings[i].MainImage))"
                             alt="@mangasOngoings[i].Name"
                             title="@mangasOngoings[i].Name" />
                    }
                    else
                    {
                        <img class="imgAnime"
                             alt="@mangasOngoings[i].Name"
                             title="@mangasOngoings[i].Name" />
                    }
                </a>
            }
        }
    </div>
</div>
