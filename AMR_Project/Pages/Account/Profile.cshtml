@page "/Profile"
@model AMR_Project.Pages.ProfileModel
@{
}
@using Microsoft.AspNetCore.Identity;
@using AMR_Project.Models; 
@inject UserManager<User> userManager;
<h1 class="textReg">Профиль</h1>
@{ 
    var user = await userManager.GetUserAsync(User);
    if (user.UserName.Equals("Admin"))
    {
        <a asp-page="/Admin/Admin">Admin page</a>
    }
}
<div class="infoAccount">
    <h3>Никнейм: </h3>
    <h3>@Model.CurrentUser.UserName</h3>
    <h3>Почта: </h3>
    <h3>@Model.CurrentUser.Email</h3>
    <form method="post" class="infoAccount">
        <h3>Текущий пароль: </h3>
        <input asp-for="Input.CurrentPassword">
        <h3>Новый пароль: </h3>
        <input asp-for="Input.NewPassword">
        <h3>Повторите новый пароль: </h3>
        <input asp-for="Input.NewPasswordConfirm">
        <button type="submit">Сменить пароль</button>
    </form>
</div>
<div class="profileLists">
    <div class="divList-item">
        <p class="categoryList">Аниме</p>
        <ul class="nameLists">
            <a asp-page="/Lists">
            <li class="nameList-item">Смотрю (56)</li>
            </a>
            <li class="nameList-item">В планах (456)</li>
            <li class="nameList-item">Брошено</li>
            <li class="nameList-item">Просмотрено</li>
            <li class="nameList-item">Любимое</li>
        </ul>
    </div>
    <div class="divList-item">
        <p class="categoryList">Манга</p>
        <ul class="nameLists">
            <li class="nameList-item">Читаю</li>
